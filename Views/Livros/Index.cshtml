@model IEnumerable<Biblioteca.Models.Livro>

@{
    ViewData["Title"] = "Livros";
}

<h1>Livros</h1>

@if (User.IsInRole("Administrador"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Novo Livro</a>
    </p>
}

<form asp-action="Index" method="get">
    <div class="input-group mb-3">
        <input type="text" name="searchTerm" class="form-control" placeholder="Pesquisar por título, autor ou ISBN" />
        <button type="submit" class="btn btn-outline-secondary">Buscar</button>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Título</th>
            <th>Autor</th>
            <th>Editora</th>
            <th>Ano</th>
            <th>ISBN</th>
            <th>Disponível</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                <td>@Html.DisplayFor(modelItem => item.Autor)</td>
                <td>@Html.DisplayFor(modelItem => item.Editora)</td>
                <td>@Html.DisplayFor(modelItem => item.AnoPublicacao)</td>
                <td>@Html.DisplayFor(modelItem => item.ISBN)</td>
                <td>@Html.DisplayFor(modelItem => item.QuantidadeDisponivel)</td>
                <td>
                    @if (User.IsInRole("Administrador"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>