@model Biblioteca.Models.Locacao

@{
    ViewData["Title"] = "Renovar Locação";
}

<h1>Renovar Locação</h1>

<h3>Confirmar renovação do empréstimo</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Livro.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Livro.Titulo)
        </dd>
        <dt class="col-sm-2">
            Data Atual de Devolução
        </dt>
        <dd class="col-sm-10">
            @Model.DataDevolucaoPrevista.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
            Nova Data de Devolução
        </dt>
        <dd class="col-sm-10 text-success">
            @Model.DataDevolucaoPrevista.AddDays(14).ToString("dd/MM/yyyy")
        </dd>
    </dl>
    
    <form asp-action="Renovar">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirmar Renovação" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>