@model Biblioteca.Models.Locacao

@{
    ViewData["Title"] = "Nova Locação";
}

<h1>Nova Locação</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="LivroId" class="control-label">Livro</label>
                <select asp-for="LivroId" class="form-control" asp-items="ViewBag.Livros">
                    <option value="">Selecione um livro</option>
                </select>
                <span asp-validation-for="LivroId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="DataDevolucaoPrevista" class="control-label"></label>
                <input asp-for="DataDevolucaoPrevista" class="form-control" type="date" />
                <span asp-validation-for="DataDevolucaoPrevista" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Confirmar Locação" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}